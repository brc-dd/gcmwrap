{
  "name": "gcmwrap",
  "version": "0.1.0",
  "description": "Secure, lightweight JavaScript library for AES-GCM encryption with key wrapping.",
  "keywords": [
    "encryption",
    "aes-gcm",
    "key-wrapping",
    "pbkdf2",
    "crypto",
    "webcrypto"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brc-dd/gcmwrap.git"
  },
  "funding": "https://github.com/sponsors/brc-dd",
  "license": "MIT",
  "author": "Divyansh Singh <brc-dd@hotmail.com> (https://github.com/brc-dd)",
  "exports": "./mod.ts",
  "tasks": {
    "run": "deno -A jsr:@brc-dd/run@0.2.0 -- -A",
    "format": "deno fmt",
    "format:fail": "deno fmt --check",
    "lint": "deno lint --fix",
    "lint:fail": "deno lint",
    "test": "deno test -A",
    "test:watch": "deno test -A --watch",
    "type": "deno check **/*.ts",
    "check": "deno task format:fail && deno task lint:fail && deno task type && deno task test",
    "build": "deno task run #/build.ts",
    "release": "deno task run #/release.ts",
    "update": "deno task run #/update.ts"
  },
  "imports": {
    "#/": "https://raw.githubusercontent.com/globalbrain/hado/v0.18.0/scripts/",
    "@msgpack/msgpack": "npm:@msgpack/msgpack@^3.1.2",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "cbor2": "npm:cbor2@^2.0.1",
    "cborg": "npm:cborg@^4.2.15",
    "uint8array-extras": "npm:uint8array-extras@^1.5.0"
  },
  "build": {
    "deps": [
      "uint8array-extras"
    ]
  },
  "fmt": {
    "lineWidth": 100,
    "proseWrap": "never",
    "semiColons": false,
    "singleQuote": true
  },
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true
  }
}
